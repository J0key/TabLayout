<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blur"
    tools:context=".RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="39dp"
        >

    <Space
        android:id="@+id/spacetop"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:layout_below="@id/spacetop"
        android:id="@+id/merk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="@font/poppins_bold"
        android:textSize="45sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        />

    <ImageView
        android:id="@+id/circle"
        android:layout_below="@id/spacetop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle"
        android:layout_marginLeft="80dp"
        />

    <Space
        android:layout_below="@id/circle"
        android:id="@+id/spacecenter"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/username_text"
        android:layout_below="@id/spacecenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        />

    <EditText
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:id="@+id/username_edit"
        android:layout_below="@+id/username_text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/edit_text"
        />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/email_text"
            android:layout_below="@id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            />

        <EditText
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:id="@+id/email_edit"
            android:layout_below="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text"
            />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/password_text"
        android:layout_below="@id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        />

    <EditText
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:id="@+id/password_edit"
        android:layout_below="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/edit_text"
        />

        <CheckBox
            android:layout_below="@id/password_edit"
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:textSize="10sp"
            android:layout_marginBottom="30dp"/>


        <TextView
            android:layout_below="@id/password_edit"

            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms"
            android:layout_marginTop="19dp"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@id/point"
            android:textSize="10sp"
            android:textColor="@color/primary"/>

        <TextView
            android:layout_below="@id/password_edit"

            android:id="@+id/and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and"
            android:layout_marginTop="19dp"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@id/terms"
            android:textSize="10sp"
            />

        <TextView
            android:layout_below="@id/password_edit"

            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conditons"
            android:textColor="@color/primary"
            android:layout_marginTop="19dp"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@id/and"
            android:textSize="10sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_btn"
        android:layout_marginTop="60dp"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_below="@id/password_edit"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Register"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerHorizontal="true"
        />

        <TextView
            android:layout_marginLeft="70dp"
            android:layout_below="@id/register_btn"
            android:id="@+id/newm"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account?"
            android:layout_marginTop="20dp"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_semibold"
            />

        <TextView
            android:layout_below="@id/register_btn"
            android:id="@+id/register2"
            android:layout_toRightOf="@id/newm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary"/>

    </RelativeLayout>


</FrameLayout>